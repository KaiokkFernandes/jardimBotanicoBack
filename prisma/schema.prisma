generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  FAUNA
  FLORA
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model especime {
  id       String   @id @default(cuid())
  name     String?
  category String?
  description String?
  habitat String?
  curiosity String?
  scientific_name String?
  image_url      String?
  type           Type @default(FAUNA)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}